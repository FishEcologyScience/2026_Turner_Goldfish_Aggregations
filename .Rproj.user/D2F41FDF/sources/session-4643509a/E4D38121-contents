
library(sf)
library(ggplot2)

shorelinemap <- readOGR(dsn = "C:/Users/TURNERN/Desktop/HH goldfish/lakeontarionorthshoreline/LakeOntShoreline_MajorWaters.shp", 
                        layer = "LakeOntShoreline_MajorWaters")


shorelinemap <- st_read("LakeOntShoreline_MajorWaters.shp")
plot(shorelinemap)

map<-fortify(shorelinemap)


ggplot() +
  geom_polygon(data = map, aes(x = long, y = lat, group = group)) +
  theme_minimal()

###new way with updated R

shorelinemap_sf <- st_as_sf(shorelinemap)

# Plot using ggplot2
ggplot(data = shorelinemap_sf) +
  geom_sf() +
  theme_minimal() +
  labs(title = "Shoreline Map")


# Define the longitude and latitude ranges for the specific area

#entire harbour limits
x_limits_HH <- c(-79.96, -79.76)  # Define your desired range for x-axis
y_limits_HH <- c(43.25, 43.32)  # Define your desired range for y-axis

# Plot the shapefile with specified x and y limits
ggplot() +
  geom_polygon(data = map, aes(x = long, y = lat, group = group)) +
  coord_cartesian(xlim = x_limits, ylim = y_limits) +
  theme_minimal()

###zoomed in cootes, GC, west endx_limits_HH <- c(-79.96, -79.76)  # Define your desired range for x-axis
x_limits_westend <- c(-79.93, -79.87)  # Define your desired range for x-axis
y_limits_westend <- c(43.26, 43.3)  # Define your desired range for y-axis

# Plot the shapefile with specified x and y limits
ggplot(data = shorelinemap_sf) +
  geom_sf(fill = "light blue") +
  coord_sf(xlim = x_limits_westend, ylim = y_limits_westend) +
  theme_minimal()

